<h1>Players</h1>

<div ng-controller="Cats as cats">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Number</th>
        <th>Points</th>
        <th>Rebounds</th>
        <th>Assists</th>
        <th>Blocks</th>
        <th>Steals</th>
        <th>Fouls</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="player in cats.players">
        <td>{{ player.name }}</td>
        <td>{{ player.number }}</td>
        <td>{{ player.points }}
          <button ng-click="cats.addStat(player, 'points')">+</button>
          <button ng-click="cats.minusStat(player, 'points')">-</button>
        </td>
        <td>{{ player.rebounds }}
          <button ng-click="cats.addStat(player, 'rebounds')">+</button>
          <button ng-click="cats.minusStat(player, 'rebounds')">-</button>
        </td>
        <td>{{ player.assists }}
          <button ng-click="cats.addStat(player, 'assists')">+</button>
          <button ng-click="cats.minusStat(player, 'assists')">-</button>
        </td>
        <td>{{ player.blocks }}
          <button ng-click="cats.addStat(player, 'blocks')">+</button>
          <button ng-click="cats.minusStat(player, 'blocks')">-</button>
        </td>
        <td>{{ player.steals }}
          <button ng-click="cats.addStat(player, 'steals')">+</button>
          <button ng-click="cats.minusStat(player, 'steals')">-</button>
        </td>
        <td>{{ player.fouls }}
          <button ng-click="cats.addStat(player, 'fouls')">+</button>
          <button ng-click="cats.minusStat(player, 'fouls')">-</button>
        </td>
      </tr>
    </tbody>
  </table>
  <button ng-click="cats.save()">Save</button>
</div>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Points</th>
      <th>Rebounds</th>
      <th>Assists</th>
      <th>Blocks</th>
      <th>Steals</th>
      <th>Fouls</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.number %></td>
        <td><%= player.points %></td>
        <td><%= player.rebounds %></td>
        <td><%= player.assists %></td>
        <td><%= player.blocks %></td>
        <td><%= player.steals %></td>
        <td><%= player.fouls %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

